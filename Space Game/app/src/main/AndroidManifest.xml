<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bouncesurface"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/asteroid_red"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.controller.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation ="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.example.controller.GameActivity"
            android:label="Game Activity"
            android:screenOrientation ="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity 
            android:name="com.example.controller.HighScoreActivity"
            android:label="High Scores"
            android:screenOrientation ="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity 
            android:name="com.example.controller.OptionsActivity"
            android:label="Options"
            android:screenOrientation ="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
    </application>

</manifest>
